{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",             
    "baseUrl": ".",                          
    "paths": {
      "*": ["*", "./*"]                      
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
